<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.AboutActivity">
    <include layout="@layout/toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_marginTop="35dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            style="@style/text_large_style"
            android:textSize="18sp"
            android:text="一款浏览Android学习文章的App"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tv_desc"
            style="@style/text_large_tint_style"
            android:text="该项目本着学习Material Design+MVP+Retrofit2+RxJava2的目的，基于鸿洋大神提供的玩Android的开放API构建而成。"
            android:layout_marginTop="10dp"/>
        <TextView
            style="@style/text_large_style"
            android:text="源码："
            android:layout_marginTop="10dp"/>
        <TextView
            style="@style/text_large_tint_style"
            android:layout_marginTop="10dp"
            android:text="https://github.com/chenweide/wanAnroid"
            android:autoLink="web"
            android:textColorLink="@color/red"/>
        <TextView
            style="@style/text_large_style"
            android:text="欢迎Star并有任何疑问发起Issue。"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</LinearLayout>